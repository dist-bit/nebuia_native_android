<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    android:theme="@style/ThemeOverlay.NebuIA.FullscreenContainer"
    tools:context=".activities.RecordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/radius_white"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/back"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@color/white_overlay"
                android:drawableStart="@drawable/close_icon"
                android:drawablePadding="@dimen/_11sdp"
                android:drawableTint="@color/nebuia_bg"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_38sdp"
                android:gravity="center"
                android:text="@string/video_record_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_16ssp" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_220sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_20sdp">

            <com.otaliastudios.cameraview.CameraView
                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:keepScreenOn="true"
                app:cameraAutoFocusResetDelay="6"
                app:cameraEngine="camera2"
                app:cameraFacing="front"
                app:cameraMode="video"
                app:cameraPlaySounds="false"
                app:cameraPreview="glSurface"
                app:cameraRequestPermissions="true"
                app:cameraUseDeviceOrientation="true">

            </com.otaliastudios.cameraview.CameraView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/panel_fingerprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:gravity="center"
                android:text="@string/initial_instruction_record"
                android:textAlignment="center"
                android:textColor="#7d82a8"
                android:textSize="@dimen/_13sdp" />


            <RelativeLayout
                android:id="@+id/zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/bg_text_evidence"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/read_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_12sdp"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13ssp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_minus25sdp"
                android:layout_width="@dimen/_41sdp"
                android:layout_height="@dimen/_41sdp"
                android:layout_gravity="center"
                android:gravity="end" >

                <ImageView
                    android:id="@+id/record"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/material_check_icon"
                    android:visibility="invisible"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/record_done"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/material_check_icon"
                    android:visibility="invisible"
                    tools:ignore="RtlSymmetry" />

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/_10sdp" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:gravity="center"
                android:text="@string/waiting_read_text"
                android:textAlignment="center"
                android:textColor="#2886de"
                android:textSize="@dimen/_13ssp" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                app:indicatorColor="#3d7ee9"
                app:indicatorSize="@dimen/_20ssp"
                app:trackColor="@android:color/white"
                app:trackThickness="@dimen/_2ssp" />


            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="@dimen/_3sdp"
                android:contentDescription="@string/powered_by_nebuia"
                android:src="@drawable/nebuia_black" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>