<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.NebuIA.FullscreenContainer"
    tools:context=".activities.IDCaptureActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/back"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:drawableStart="@drawable/close_icon"
            android:drawablePadding="@dimen/_11sdp"
            android:drawableTint="#2B303D"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/instruction_id"
            android:textColor="#2B303D"
            android:text="@string/id_title"
            android:paddingStart="@dimen/_13sdp"
            android:paddingEnd="@dimen/_13sdp"
            android:textSize="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/subtitle_id"
            android:textColor="#6A6E78"
            android:paddingStart="@dimen/_13sdp"
            android:paddingEnd="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_34sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <ImageView
            android:id="@+id/id_icon"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_id_front"
            android:contentDescription="@string/image_separator"/>

        <Button
            android:text="@string/init_verification"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/_80sdp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/capture"
            android:layout_width="335dp"
            android:layout_height="52dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/button" />

        <TextView
            android:textAlignment="center"
            android:textColor="#6A6E78"
            android:text="@string/extract_id"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

    </androidx.appcompat.widget.LinearLayoutCompat>


        <ImageView
            android:layout_width="@dimen/_99sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/_3sdp"
            android:contentDescription="@string/powered_by_nebuia"
            android:src="@drawable/nebuia_black" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>



